<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginEnd="8dp"
            android:id="@+id/iv_product_in_cart"
            android:src="@drawable/ic_home"
            android:layout_width="86dp"
            android:layout_height="86dp"/>

        <TextView
            android:id="@+id/tv_name_product_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product_in_cart"
            android:text="Pizza A"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_price_product_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_product_in_cart"
            android:layout_toRightOf="@id/iv_product_in_cart"
            android:text="Ä‘45000"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:gravity="center"
            android:layout_below="@+id/tv_price_product_in_cart"
            android:layout_toRightOf="@id/iv_product_in_cart"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_minus_quantity_in_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_minus_24px" />

            <TextView
                android:id="@+id/tv_quantity_product_in_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:text="2" />

            <ImageView
                android:id="@+id/iv_add_quantity_in_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_add_24px" />
        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>