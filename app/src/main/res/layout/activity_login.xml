<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/login"></ImageView>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogin"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#FF4F5A"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <View
        android:id="@+id/v1"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tvLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="#E8E8E8"></View>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvUsernameLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/v1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="Username"
        app:startIconDrawable="@drawable/username"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="10dp">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvPasswordLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvUsernameLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="Password"
        app:startIconDrawable="@drawable/lock"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:inputType="textPassword"
            >

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPasswordLogin"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:text="Login">

    </Button>

    <View
        android:id="@+id/v2"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="#E8E8E8"></View>

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do not have an account ?"
        android:gravity="center"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/v2">

    </TextView>



</RelativeLayout>