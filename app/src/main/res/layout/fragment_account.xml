<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    android:layout_width="match_parent"
    android:background="#E8E7E7"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/iv_img_account"
        android:src="@drawable/ic_person_default"
        android:layout_width="120dp"
        android:layout_height="120dp"
         />
    <TextView
        android:id="@+id/tv_name_user_account"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="48dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="30sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_edit_profile_account"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:drawableStart="@drawable/ic_person_acount"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Edit profile"
        android:gravity="center_vertical"
        android:background="@drawable/bg_selection_account"
        />
    <TextView
        android:id="@+id/tv_order_history_account"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_orderhistory"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Order history"
        android:gravity="center_vertical"
        android:background="@drawable/bg_selection_account"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/tv_help_contact_account"
        android:layout_marginBottom="8dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selection_account"
        android:padding="8dp"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="Help contact"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:drawableStartCompat="@drawable/ic_help" />
    <TextView
        android:id="@+id/tv_chat_with_me"
        android:layout_marginBottom="8dp"
        android:drawablePadding="20dp"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Chat with me"
        android:gravity="center_vertical"
        android:background="@drawable/bg_selection_account"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/ic_chat" />
    <TextView
        android:id="@+id/tv_log_out"
        android:layout_marginBottom="8dp"
        android:drawablePadding="20dp"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Log out"
        android:gravity="center_vertical"
        android:background="@drawable/bg_selection_account"
        android:padding="8dp"
        app:drawableStartCompat="@drawable/ic_exit" />
</LinearLayout>