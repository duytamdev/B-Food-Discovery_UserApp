<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        app:srcCompat="@drawable/username" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="30dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        android:gravity="center"
        />

    <TextView
        android:drawableStart="@drawable/ic_person_acount"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        android:textColor="@color/black"
        android:text="Edit profile"
        android:gravity="center_vertical"
        android:background="@drawable/tv_button_acount"
        />
    <TextView
        android:drawableStart="@drawable/ic_orderhistory"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="320dp"
        android:textColor="@color/black"
        android:text="Order history"
        android:gravity="center_vertical"
        android:background="@drawable/tv_button_acount"
        />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/tv_button_acount"
        android:drawableStart="@drawable/ic_help"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="Help contact"
        android:textColor="@color/black"
        android:textSize="25dp" />
    <TextView
        android:drawableStart="@drawable/ic_chat"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="460dp"
        android:textColor="@color/black"
        android:text="Chat with me"
        android:gravity="center_vertical"
        android:background="@drawable/tv_button_acount"
        />
    <TextView
        android:drawableStart="@drawable/ic_exit"
        android:drawablePadding="20dp"
        android:textSize="25dp"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="530dp"
        android:textColor="@color/black"
        android:text="Logout"
        android:gravity="center_vertical"
        android:background="@drawable/tv_button_acount"
        />







</RelativeLayout>