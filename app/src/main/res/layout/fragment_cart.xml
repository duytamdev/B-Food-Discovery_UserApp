<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="70dp"
    android:paddingHorizontal="8dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_ui_order"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="My Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_total_price"
        android:layout_below="@id/tv_ui_order"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tv_total_price"
        android:layout_marginStart="8dp"
        android:layout_above="@+id/btn_order_now"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Tổng Tiền : đ400.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_order_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Order now !" />
</RelativeLayout>